@model UygulamalarBigModel
@{
    Layout = "_AdminLayout";


}



<div class="content">

    <div class="box-">
        <h1>
            Plastik Levhalar Edit
        </h1>
    </div>

    <div class="clear" style="height: 10px;"></div>

    <div class="box-">



        <form asp-controller="Admin" asp-action="UygulamalarEditMethod" method="POST" class="form label" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Code" />
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PdfUrl" />
            <input type="hidden" asp-for="DataSheet" />
            <input type="hidden" asp-for="Brosur" />
            <input type="hidden" asp-for="SayfaResmi" />
            <ul>
                <li>
                    <label asp-for="Culture"></label>
                    <div class="form-content">
                        <select asp-for="Culture">
                            <option selected value="@Model.Culture">@Model.Culture</option>
                        </select>
                        <span asp-validation-for="Culture" class="text-danger"></span>
                    </div>
                </li>
                <li>
                    <label asp-for="Name"></label>
                    <div class="form-content">
                        <input asp-for="Name">
                        <p>
                            Levha Adı
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="Description"></label>
                    <div class="form-content">
                        <textarea id="editor" asp-for="Description" cols="30" rows="5"></textarea>

                    </div>
                </li>

                <li>
                    <label asp-for="SeoUrl"></label>
                    <div class="form-content">
                        <input asp-for="SeoUrl">
                        <p>
                            Kategorinin seo bilgisi boş bırakılırsa otomatik atanacaktır.
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="filePdf"></label>
                    <div class="form-content">
                        <input asp-for="filePdf">
                        <p>
                            Döküman Dosyası
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="fileDataSheet"></label>
                    <div class="form-content">
                        <input asp-for="fileDataSheet">
                        <p>
                            Data Sheet
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="fileBrosur"></label>
                    <div class="form-content">
                        <input asp-for="fileBrosur">
                        <p>
                            Broşür ekle
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="fileSayfaResmi"></label>
                    <div class="form-content">
                        <input asp-for="fileSayfaResmi">
                        <img src="~/images/uygulamalar/@Model.SayfaResmi" alt="Alternate Text" style="width:30px;height:30px;" />
                        <p>
                            Resim ekle
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="MetaDescription"></label>
                    <div class="form-content">
                        <input asp-for="MetaDescription">
                        <p>
                            Meta Açıklaması.
                        </p>
                    </div>
                </li>



                <li>
                <li class="submit">
                    <button type="submit">Gönder</button>
                </li>
            </ul>
        </form>
    </div>

</div>

@section Scripts {
    <script>
        CKEDITOR.replace('editor');
    </script>

}