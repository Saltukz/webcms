@model UygulamalarBigModel
@{
    Layout = "_AdminLayout";


}



<div class="content">

    <div class="box-">
        <h1>
            Uygulama Ekle
        </h1>
    </div>

    <div class="clear" style="height: 10px;"></div>

    <div class="box-">



        <form asp-controller="Admin" asp-action="UygulamalarAddMethod" method="POST" enctype="multipart/form-data" class="form label">
            <div asp-validation-summary="All" class="text-danger"></div>

            <ul>
                <li>
                    <label asp-for="Culture"></label>
                    <div class="form-content">
                        <select asp-for="Culture">
                            <option selected value="tr">Türkçe</option>
                        </select>
                        <span asp-validation-for="Culture" class="text-danger"></span>
                    </div>
                </li>
                <li>
                    <label asp-for="Name"></label>
                    <div class="form-content">
                        <input asp-for="Name">
                        <p>
                            Uygulama Adı
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="Description"></label>
                    <div class="form-content">
                        <textarea id="editor" asp-for="Description" cols="30" rows="5"></textarea>

                    </div>
                </li>


                <li>
                    <label asp-for="SeoUrl"></label>
                    <div class="form-content">
                        <input asp-for="SeoUrl">
                        <p>
                            Uygulamanın seo bilgisi, boş bırakılırsa otomatik atanacaktır.
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="filePdf"></label>
                    <div class="form-content">
                        <input asp-for="filePdf">
                        <p>
                            Döküman Dosyası
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="fileDataSheet"></label>
                    <div class="form-content">
                        <input asp-for="fileDataSheet">
                        <p>
                            Data Sheet
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="fileBrosur"></label>
                    <div class="form-content">
                        <input asp-for="fileBrosur">
                        <p>
                            Broşür ekle
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="fileSayfaResmi"></label>
                    <div class="form-content">
                        <input asp-for="fileSayfaResmi">
                        <p>
                            Levha Resmi
                        </p>
                    </div>
                </li>


                <li>
                    <label asp-for="MetaDescription"></label>
                    <div class="form-content">
                        <input asp-for="MetaDescription">
                        <p>
                            Meta Açıklaması.
                        </p>
                    </div>
                </li>

                <li>
                    <label asp-for="MetaTags"></label>
                    <div class="form-content">
                        <input asp-for="MetaTags">
                        <p>
                            Arama motoru için meta tagları kelime kelime arada boşluk bırakarak giriniz. Örneğin "Proses,tarım"
                        </p>
                    </div>
                </li>

                <li>
                <li class="submit">
                    <button type="submit">Gönder</button>
                </li>
            </ul>
        </form>
    </div>

</div>

@section Scripts {
    <script>
         CKEDITOR.replace('editor');
    </script>

}