@model HaberlerModel
@{
    Layout = "_AdminLayout";

    var kodlar = Model.Codes;

    var allcultures = Model.AllCultures;

   
}


<div class="content">

    <div class="box-">
        <h1>
            Dil Ekle
        </h1>
    </div>

    <div class="clear" style="height: 10px;"></div>


    <form asp-controller="Admin" asp-action="GetSelectedNew" method="POST" enctype="multipart/form-data" class="form label">
        <select asp-for="RequestedNew"  onchange="this.form.submit();">

            <option disabled  selected>Seçiniz</option>
            @foreach (var kod in kodlar)
            {
                <option value="@kod">@kod</option>
            }

        </select>
    </form>

        <div class="box-">
            <form asp-controller="Admin" asp-action="AddLanguageToNewsSubmit" method="POST" enctype="multipart/form-data" class="form label">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" asp-for="RequestedNew" />
                <ul>
                    
                    <li>
                        <label asp-for="Culture"></label>
                        <div class="form-content">
                            <select asp-for="Culture">
                                @foreach (var item in allcultures)
                                {

                                   
                                       
                                            <option value="@item">@item</option>
                                  
                                }
                            </select>
                            <span asp-validation-for="Culture" class="text-danger"></span>
                        </div>
                    </li>


                    <li>
                        <label asp-for="Title"></label>
                        <div class="form-content">
                            <input asp-for="Title">
                            <p>
                                Haberin başlığı
                            </p>
                        </div>
                    </li>
                    <li>
                        <label asp-for="ShortDescription"></label>
                        <div class="form-content">
                            <input asp-for="ShortDescription">
                            <p>
                                Haberler sayfasında görünecek olan kısa açıklama.
                            </p>
                        </div>
                    </li>
                    <li>
                        <label asp-for="Description"></label>
                        <div class="form-content">
                            <textarea id="editor" asp-for="Description" cols="30" rows="5"></textarea>

                        </div>
                    </li>
                    <li>
                        <label asp-for="SeoUrl"></label>
                        <div class="form-content">
                            <input asp-for="SeoUrl">
                            <p>
                                Haberin seo bilgisi boş bırakılırsa otomatik atanacaktır.
                            </p>
                        </div>
                    </li>
                    <li>
                        <label asp-for="file">Haber Resmi</label>
                        <div class="form-content">
                            <input asp-for="file">
                        </div>
                    </li>

                    <li>
                        <label asp-for="MetaTags"></label>
                        <div class="form-content">
                            <input asp-for="MetaTags">
                            <p>
                                Arama motoru için meta tagları kelime kelime arada boşluk bırakarak giriniz. Örneğin "Işık Plastik,Growtech,Kocaeli"
                            </p>
                        </div>
                    </li>
                    <li>
                    <li class="submit">
                        <button type="submit">Gönder</button>
                    </li>
                </ul>
            </form>
        </div>

</div>

@section Scripts {
    <script>
        CKEDITOR.replace('editor');

       
    </script>

}