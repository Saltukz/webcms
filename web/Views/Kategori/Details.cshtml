@model BigViewModel
@{
    var category = Model.CategoryModel.category;
    var products = Model.CategoryModel.products;

    var renk = ViewData["Color"] != null ? ViewData["Color"] : "Transpalent";
}
@section head {
    <title>@category.Title | Işık Plastik</title>
    <meta name="description" content="@category.MetaDescription">

}

@section css {
    <link rel="stylesheet" href="~/tabaklarcss/bardaklar_style.css">
}

<section id="page-title" ba data-bg-parallax="~/images/parallax/@category.ImageUrl">
    <div class="parallax-container img-loaded" data-bg="~/images/parallax/ayran_image.jpg" data-velocity="-.140" style="background: url(&quot;/images/parallax/ayran_image.jpg&quot;) 0px;" data-ll-status="loaded"></div>
    <div class="container" style="min-height:330px;">


    </div>
</section>
