<section>

    <div class="container">
        <div class="row m-b-20">
            <div class="col-lg-12 p-t-10 m-b-20">
                <h1>@category.Title</h1>
                <p>
                    @Html.Raw(category.Description)
                </p>


            </div>
            <!--Product list-->
            <div class="shop">
                <!-- URUN KODLARI : BAŞLA -->
                <div class="vvpk-tablo">

                    <div class="m-row">
                        <div class="vvpk-row header">
                            <div class="vvpk-cl">Ürün Kodu</div>
                            <div class="vvpk-cl">Renk</div>
                            <div class="vvpk-cl">Üst Çap</div>
                            <div class="vvpk-cl">Alt Çap</div>
                            <div class="vvpk-cl">Yükseklik</div>
                            <div class="vvpk-cl">Hacim</div>
                            <div class="vvpk-cl">Tam Hacim</div>
                            <div class="vvpk-cl">Baskı</div>
                            <div class="vvpk-cl">Sosis İçi Ad.</div>
                            <div class="vvpk-cl">Koli İçi Ad.</div>
                        </div>
                        <div class="vvpk-row">
                            @foreach (var product in products)
                            {
                                <div class="vvpk-cl">@product.Code</div>
                                <div class="vvpk-cl">@product.Renk</div>
                                <div class="vvpk-cl">@product.UstCap</div>
                                <div class="vvpk-cl">@product.AltCap</div>
                                <div class="vvpk-cl">@product.Yukseklik</div>
                                <div class="vvpk-cl">@product.Hacim</div>
                                <div class="vvpk-cl">@product.TamHacim</div>


                                @if (product.Baski == 1)
                                {
                                    <div class="vvpk-cl"><i class="fa fa-check" aria-hidden="true"></i></div>
                                }
                                else
                                {
                                    <div class="vvpk-cl"><i class="fa fa-times" aria-hidden="true"></i></div>
                                }
                                <div class="vvpk-cl">@product.SosisIciAdet</div>
                                <div class="vvpk-cl">@product.KoliIciAdet</div>
                            }
                        </div>
                    </div>


                </div>



            </div>
        </div>

        <!-- URUN KODLARI : BİTİR -->


